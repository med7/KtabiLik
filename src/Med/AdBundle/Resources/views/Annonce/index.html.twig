{% extends 'MedAdBundle::maquette.html.twig' %}

{% block body -%}
    <div class="count">
      <small>  {{ entities.getTotalItemCount }} Ouvrages </small>
        <br/>
    </div>
    <table>



        {%  for annonce in entities %}


                <div class="panel panel-primary">
                    <div class="panel-heading" >

                    </div>
                    <div class="row" style="padding: 10px;">


                    <div class="col-md-2">
                        <img src="../../{{ annonce.capture}}" alt="" class="img-rounded img-responsive" />

                        </div>
                    <div class="col-sm-6 col-md-8">
                        <a href="{{ path('annonce_show',{'id':annonce.id,'slug':annonce.titre}) }}"><h4> {{ annonce.titre }}</h4></a>
                        <small>De :{{ annonce.auteur}}</small> <br/>



                          <a href="#">{{ annonce.ville}}</a>

                        </div>
                    </div>
                </div>

            </div>

        {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
     {{ knp_pagination_render(entities) }}
    </div>


    {% endblock %}
